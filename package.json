{
  "name": "hot-or-cold",
  "version": "1.0.0",
  "description": "Guess the number and find out if you're right",
  "main": "compiled/main.js",
  "scripts": {
    "babel": "babel js -ws -d compiled --presets es2015,stage-2",
    "browser-sync": "browser-sync start --server --files \"*.html, styles/*.css, compiled/*.js\" --no-notify --no-open",
    "run": "npm run babel & npm run browser-sync"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0"
  }
}
